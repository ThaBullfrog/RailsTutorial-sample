<% if !logged_in? %>
  <div class="center jumbotron">
    <h1>Welcome to the Sample App</h1>

    <h2>
      This is the home page for the
      <a href="http://www.railstutorial.org/">Ruby on Rails Tutorial</a>
      sample application.
    </h2><br>

    <table class="login-or-signup hidden-xs">
      <tbody>
        <tr>
          <th>
            <%= link_to "Log In", login_path, class: "btn btn-lg btn-primary btn-sign-up" %>
          </th>
          <th>
            <span>or</span>
          </th>
          <th>
            <%= link_to "Sign up now!", signup_path, class: "btn btn-lg btn-primary btn-sign-up" %>
          </th>
        </tr>
      </tbody>
    </table>
    <div class="login-or-signup visible-xs-block">
      <%= link_to "Log In", login_path, class: "btn btn-lg btn-primary btn-sign-up" %>
      <div>or</div>
      <%= link_to "Sign up now!", signup_path, class: "btn btn-lg btn-primary btn-sign-up" %>
    </div>
  </div>
<% end %>

<% provide(:title, "#{@user.name} - Followers") %>

<div class="max-width-380-centered">
  <h1><%= link_to @user.name, @user %>'s <%= pluralize_without_number(@count, "follower") %> (<%= @count.to_s %>)</h1>

  <%= will_paginate(@followers) %>

  <table class="users">
    <%= render @followers %>
  </table>

  <%= will_paginate(@followers) %>
</div>
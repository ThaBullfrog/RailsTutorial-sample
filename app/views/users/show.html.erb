<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-sm-4">
    <section class="user_info">
      <table><tbody><tr>
        <th>
          <%= avatar_for @user %>
        </th>
        <th style="padding-left: 10px">
          <h3 style="margin: 0"><%= @user.name.split(' ').join("<br>").html_safe %></h3>
        </th>
      </tr></tbody></table>
    </section>
  </aside>
  <span class="visible-xs-inline"><br></span>
  <section class="col-sm-8">
    <p>
      <% if @user.posts.any? %>
        <%= will_paginate @posts %>
        <ul class="posts">
          <%= render @posts %>
        </ul>
        <%= will_paginate @posts %>
      <% else %>
        This user has not posted yet.
      <% end %>
    </p>
  </section>
</div>
<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-sm-4">
    <section class="user_info">
      <h1><%= avatar_for @user %>&nbsp;<%= @user.name %></h1><br>
      <p>
        Email:<br>
        <%= @user.email %>
      </p>
      <p>
        Created:<br>
        <%= @user.created_at %>
      </p>
      <p>
        Modified:<br>
        <%= @user.updated_at %>
      </p>
    </section>
  </aside>
  <span class="visible-xs-inline"><br></span>
  <section class="col-sm-8">
    <p>
      <!-- Timeline -->
    </p>
  </section>
</div>
<li id="post-<%= post.id %>" class="post">
  <%= gravatar_with_link_for(post.user, size: 40) %>
  <span class="user"><%= link_to post.user.name, post.user %></span>
  <span class="post-content"><%= post.content %></span>
  <span class="timestamp">
    Posted <%= time_ago_in_words(post.created_at) %> ago
    <% if current_user?(post.user) || (logged_in? && current_user.admin?) %>
      <%= link_to "delete", post, method: :delete, data: { confirm: "Will destroy this post permanently" } %>
    <% end %>
  </span>
</li>